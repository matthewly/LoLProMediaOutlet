<div class="container-fluid">
  <div class="row col-md-offset-4">
    <h3 class="gold">Summoner Name:  <%= @name %></h3>
  </div>
  <div class="row col-md-offset-3">

    <h5 class="green">Twitch: <%= @twitch_status %> | <a class="blue" href="<%= @twitch_url%>"><%= @twitch_url %></a></h5>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h4 class="gold">Ranked Solo Queue History</h4>
      <table class="table table-hover match_history">
        <tr class="header-names">
          <th>Champion</th>
          <th>Kills</th>
          <th>Deaths</th>
          <th>Assists</th>
          <th>Gold</th>
          <th>Time</th>
        </tr>

        <tr class="game1">
          <td><%= @champ_name[0]%> </td>
          <td> <%= @kills[0] %></td>
          <td> <%= @deaths[0]  %> </td>
          <td> <%= @assists[0] %> </td>
          <td> <%= @ge[0] %> </td>
          <td> <%= @time[0] %> mins</td>
        </tr>
        <tr class="game2">
          <td><%= @champ_name[1]%> </td>
          <td> <%= @kills[1] %></td>
          <td> <%= @deaths[1]  %> </td>
          <td> <%= @assists[1] %> </td>
          <td> <%= @ge[1] %> </td>
          <td> <%= @time[1] %> mins</td>
        </tr>
        <tr class="game3">
          <td><%= @champ_name[2]%> </td>
          <td> <%= @kills[2] %></td>
          <td> <%= @deaths[2]  %> </td>
          <td> <%= @assists[2] %> </td>
          <td> <%= @ge[2] %> </td>
          <td> <%= @time[2] %> mins</td>
        </tr>
        <tr class="game4">
          <td><%= @champ_name[3]%> </td>
          <td> <%= @kills[3] %></td>
          <td> <%= @deaths[3]  %> </td>
          <td> <%= @assists[3] %> </td>
          <td> <%= @ge[3] %> </td>
          <td> <%= @time[3] %> mins</td>
        </tr>
        <tr class="game5">
          <td><%= @champ_name[4]%> </td>
          <td> <%= @kills[4] %></td>
          <td> <%= @deaths[4]  %> </td>
          <td> <%= @assists[4] %> </td>
          <td> <%= @ge[4] %> </td>
          <td> <%= @time[4] %> mins</td>
        </tr>
      </table>
    </div>

    <div class="col-md-6 ">
      <h4 class="gold">Latest Tweets</h4>
      <table class="table table-hover">
        <tr class="header-names">
          <th>Date</th>
          <th>Tweet</th>
        </tr>
        <tr class="tweets">
          <td class="username"><%= @tweettime1 %> </td>
          <td><%= @tweet[0].text %> </td>
        </tr>
        <tr class="tweets">
          <td class="username"><%= @tweettime2 %> </td>
          <td><%= @tweet[1].text %> </td>
        </tr>
        <tr class="tweets">
          <td class="username"><%= @tweettime3 %> </td>
          <td><%= @tweet[2].text %> </td>
        </tr>
        <tr class="tweets">
          <td class="username"><%= @tweettime4 %> </td>
          <td><%= @tweet[3].text %> </td>
        </tr>
      </table>
    </div>

  </div>

  <div class="row">
    <div class="col-md-6">
      <h4 class="gold">YouTube Videos</h4>
      <table class="table table-hover">
        <tr>
          <th><iframe width="550" height="240"
                      src="http://www.youtube.com/embed/<%=@video_id_one%>?autoplay=0">
          </iframe></th>

        </tr>
      </table>
    </div>

    <div class="col-md-6">
      <h4 class="gold"> Latest Facebook Status</h4>
      <table class="table table-hover">
        <tr class="header-names">
          <th>Status</th>
        </tr>
        <tr>
          <td class="statuses">
            <h4><%= @facebook_post1 %> </h4>
          </td>
        </tr>
      </table>
    </div>
  </div>

</div>