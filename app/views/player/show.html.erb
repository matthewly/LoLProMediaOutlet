<style>
  .gold {
    color: darkgoldenrod;
  }
  .green
  {
    color: green;
  }
  .blue
  {
    color: blue;
  }

  .match_history tr, .match_history th
  {
    text-align: center;
  }
  .tweets
  {
    background: lightskyblue;
  }
  .header-names
  {
    background: lightgray;
  }
  .username
  {
    font-weight: 900;
  }
  .statuses
  {
    background: beige;
  }
</style>
<% if @wins[0] == true %>
    <style type="text/css">
      .match_history tr.game1 {
        background: greenyellow;
      }
    </style>
    <% else %>
    <style type="text/css">
      .match_history tr.game1 {
        background: lightpink;
      }
    </style>
<% end %>
